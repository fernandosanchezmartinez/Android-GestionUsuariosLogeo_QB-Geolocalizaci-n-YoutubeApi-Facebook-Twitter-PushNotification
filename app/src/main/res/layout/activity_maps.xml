<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="DESCARGAR LOCALIZACIONES"
        android:id="@+id/btn_posActual"
        android:onClick="onDescargarCoordClick"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_descargarCoord" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="damp_2.utad.actividad7_fernando_sanchez_martinez.FragmentoFBTW"
        android:id="@+id/fragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="93dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="GUARDAR POS. ACTUAL"
        android:layout_alignBottom="@+id/btn_posActual"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_descargarCoord" />


</RelativeLayout>



