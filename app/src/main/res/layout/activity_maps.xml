<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR POS. ACTUAL"
        android:id="@+id/btn_posActual"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="damp_2.utad.actividad7_fernando_sanchez_martinez.FragmentoFBTW"
        android:id="@+id/fragment"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/btn_posActual"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargar coordenadas"
        android:layout_alignBottom="@+id/btn_posActual"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_descargarCoord" />


</RelativeLayout>



